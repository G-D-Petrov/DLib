// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id            Int            @id @default(autoincrement())
  title         String
  author        String
  town       String
  address    String
  
  clerkId       String

  @@index([clerkId])
}